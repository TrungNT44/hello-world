@using System.Web.Optimization;
@{
    ViewBag.Title = "Tin tuyển dụng";
}

<h4><b>Thông tin tuyển dụng</b></h4>
<div ng-controller="RecruitController">
    <form role="form" class="form-horizontal">
        <hr style="margin-top:0px" />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-2 control-label">Nhà thuốc<span style="color:red">* </span></label>
                    <div class="col-md-4">
                        <select ng-disabled="checked" class="form-control" ng-change="DDL_DrugStoresChange()" ng-options="nhathuoc as nhathuoc.TenNhaThuoc for nhathuoc in ArrNhaThuocs" ng-model="InputData.NhaThuoc">
                            <option value="">--Chọn nhà thuốc--</option>
                        </select>
                    </div>
                    <label class="col-md-2 control-label">Tên hiển thị<span style="color:red">* </span></label>
                    <div class="col-md-4">
                        <input ng-disabled="checked" type="text" ng-model="InputData.TenNhaThuoc" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-2 control-label">Tỉnh thành<span style="color:red">* </span></label>
                    <div class="col-md-4">
                        <select ng-disabled="checked" class="form-control" ng-model="InputData.IdTinhThanh">
                            <option value="">--Chọn tỉnh thành--</option>
                            <option ng-repeat="tinhthanh in ArrTinhThanhs" value="{{tinhthanh.IdTinhThanh}}">{{tinhthanh.TenTinhThanh}}</option>
                        </select>
                    </div>                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-2 control-label">Địa chỉ<span style="color:red">* </span></label>
                    <div class="col-md-10">
                        <input type="text" ng-disabled="checked" rows="3" ng-model="InputData.DiaChiNhaTuyenDung" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-2 control-label">Ngày đăng<span style="color:red">* </span></label>
                    <div class="col-md-4">
                        <input ng-disabled="checked" type="text" ng-model="InputData.NgayDang_View" class="input-datetime form-control text-box single-line" />
                    </div>
                    <label class="col-md-2 control-label">Ngày hết hạn<span style="color:red">* </span></label>
                    <div class="col-md-4">
                        <input ng-disabled="checked" type="text" ng-model="InputData.NgayHetHan_View" class="input-datetime form-control text-box single-line" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-2 control-label">Tiêu đề<span style="color:red">* </span></label>
                    <div class="col-md-10">
                        <input ng-disabled="checked" type="text" ng-model="InputData.TieuDe" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-2 control-label">Nội dung<span style="color:red">* </span></label>
                    <div class="col-md-10">
                        <textarea ng-disabled="checked" rows="3" ng-model="InputData.NoiDung" class="form-control"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-2 control-label">Liên hệ<span style="color:red">* </span></label>
                    <div class="col-md-10">
                        <input type="text" ng-disabled="checked" rows="3" ng-model="InputData.LienHe" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-2 control-label">Liên kết</label>
                    <div class="col-md-10">
                        <input ng-disabled="checked" type="text" ng-model="InputData.LienKet" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-2 control-label">Hoạt động</label>
                    <div class="col-md-10">
                        <input type="checkbox" ng-disabled="checked" ng-model="InputData.HoatDong" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <span class="btn-separator"></span>
                        <input type="button" onclick="javascript:window.history.go(-1);"  value="Quay lại" class="btn btn-primary">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        var isView = true;
        var idTuyenDung = @Html.Raw(Json.Encode(@ViewBag.IdTuyenDung));
        var permission = @ViewBag.IsAdmin;
        $(document).ready(function () {

        });
    </script>
}