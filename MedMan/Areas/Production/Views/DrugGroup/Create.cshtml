
@{
    ViewBag.Title = "Tạo nhóm thuốc mới";
}

<h4><b>@ViewBag.Title</b></h4>
<hr style="margin-top:0px" />

<div class="form-horizontal" ng-controller="ListDrugGroupController" ng-cloak>

    <div class="form-group">
        <label class="control-label col-md-2" style="text-align:right">Tên nhóm thuốc</label>
        <div class="col-md-10">
            <input class="form-control" style="text-align:left" type="text" ng-model="newDrugGroup.TenNhomThuoc" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" style="text-align:right">Ghi chú</label>
        <div class="col-md-10">
            <input class="form-control" style="text-align:left" type="text" ng-model="newDrugGroup.KyHieuNhomThuoc" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-default" href="/DrugGroup/Index">Quay lại</a>
            <span class="btn-separator"></span>
            <button class="btn btn-primary" ng-click="saveDrugGroup()">Thêm mới</button>

        </div>
    </div>




</div>

