
@{
    ViewBag.Title = "Xóa nhóm thuốc";
}


<script>
    var viewModel = @Html.Raw(ViewBag.ViewModel);
</script>

<h4><b>Bạn đã chắc chắn xóa nhóm thuốc này?</b></h4>
<hr style="margin-top:0px" />

<div class="form-horizontal" ng-controller="ListDrugGroupController" ng-cloak>

    <div class="form-group">
        <label class="control-label col-md-2" style="text-align:right">Tên nhóm thuốc</label>
        <div class="col-md-10">
            <input class="form-control" style="text-align:left" ng-readonly="true" type="text" ng-model="model.TenNhomThuoc" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" style="text-align:right">Ghi chú</label>
        <div class="col-md-10">
            <input class="form-control" style="text-align:left" ng-readonly="true" type="text" ng-model="model.KyHieuNhomThuoc" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-default" href="/DrugGroup/Index">Quay lại</a>
            <span class="btn-separator"></span>
            <button class="btn btn-primary" ng-click="deleteDrugGroup()">Xác nhận</button>

        </div>
    </div>




</div>