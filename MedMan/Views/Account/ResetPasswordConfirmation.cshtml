@model sThuoc.Models.ResetPasswordConfirmModel

@{
    ViewBag.Title = "Xác nhận khôi phục mật khẩu";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        @*<legend>ResetPasswordConfirmModel</legend>*@

        @Html.Hidden("Token", Model.Token)

        <div class="editor-label">
            @Html.LabelFor(model => model.NewPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewPassword)
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>

        <p>
            <input type="submit" value="Khôi phục" class="btn btn-default" />
        </p>
    </fieldset>
}

