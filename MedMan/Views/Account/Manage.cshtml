@model sThuoc.Models.LocalPasswordModel
@{
    ViewBag.Title = "Thay đổi mật khẩu người dùng";
}

<hgroup class="title">
    <h4><b>@ViewBag.Title</b></h4>
</hgroup>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-12">
        <p>Bạn đang đăng nhập với tài khoản: <strong>@User.Identity.Name</strong></p>
        @Html.Partial("_ChangePasswordPartial")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
