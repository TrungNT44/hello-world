            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Quay lại", "Index", "Home",null, new { @class = "btn btn-default" })
                @*<input type="button" value="Quay lại" class="btn btn-default" onclick="javascript:window.history.go(-1);" />*@
                <span class="btn-separator"></span>
                @*<input type="button" value="Sửa thông tin" class="btn btn-default" onclick="EditInfo()" />*@
                @Html.ActionLink("Sửa thông tin", "EditInfo", new { id = Model.MaNhaThuoc }, new { @class = "btn btn-default" })
                
            </div>
          </div>
    </div>
}

    <script>
        function EditInfo() {
            window.location.href = "/nhathuoc/EditInfo/" + "@Model.MaNhaThuoc";
        }
    </script>
