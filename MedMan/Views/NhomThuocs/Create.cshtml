@model sThuoc.Models.NhomThuoc

@{
    ViewBag.Title = "Tạo nhóm thuốc mới";
}
<h4><b>@ViewBag.Title</b></h4>
<hr style="margin-top:0px" />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>NhomThuoc</h4>*@
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">                        
            @Html.LabelFor(model => model.TenNhomThuoc, htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align:right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNhomThuoc, new { htmlAttributes = new { @class = "form-control", @style = "text-align:left" } })
                @Html.ValidationMessageFor(model => model.TenNhomThuoc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KyHieuNhomThuoc, htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align:right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KyHieuNhomThuoc, new { htmlAttributes = new { @class = "form-control", @style = "text-align:left" } })
                @Html.ValidationMessageFor(model => model.KyHieuNhomThuoc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Quay lại" class="btn btn-default" onclick="location.href='@Url.Action("Index", "NhomThuocs")'" />
                @*<input type="button" value="Quay lại" class="btn btn-default" onclick="javascript:window.history.go(-1);" />*@
                <span class="btn-separator"></span>
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                
            </div>
        </div>
    </div>
}

